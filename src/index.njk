---
layout: base.njk
title: Home
---

<div x-data='{
    content: {{ content | dump | safe }},
    mobileMenuOpen: false,
    formData: {
        firstName: "",
        lastName: "",
        email: ""
    },
    handleSubmit() {
        console.log("Form submitted:", this.formData);
        alert("Thank you for your interest! This is a demo form.");
    }
}'>

    {# Navigation #}
    <nav class="fixed top-0 w-full bg-forest-dark/95 backdrop-blur-sm text-cream z-50 shadow-lg">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                {# Mobile menu button #}
                <button @click="mobileMenuOpen = !mobileMenuOpen"
                        class="md:hidden text-cream hover:text-sage transition-colors"
                        :aria-expanded="mobileMenuOpen">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>

                {# Desktop navigation #}
                <ul class="hidden md:flex md:space-x-8 mx-auto">
                    <template x-for="item in content.navigation" :key="item.href">
                        <li>
                            <a :href="item.href"
                               x-text="item.label"
                               class="text-sm font-medium hover:text-sage transition-colors py-2 border-b-2 border-transparent hover:border-sage">
                            </a>
                        </li>
                    </template>
                </ul>
            </div>

            {# Mobile menu #}
            <div x-show="mobileMenuOpen"
                 x-cloak
                 x-transition:enter="transition ease-out duration-200"
                 x-transition:enter-start="opacity-0 -translate-y-4"
                 x-transition:enter-end="opacity-100 translate-y-0"
                 class="md:hidden py-4 border-t border-forest-light">
                <ul class="space-y-2">
                    <template x-for="item in content.navigation" :key="item.href">
                        <li>
                            <a :href="item.href"
                               x-text="item.label"
                               @click="mobileMenuOpen = false"
                               class="block py-2 px-4 hover:bg-forest-light/50 rounded transition-colors">
                            </a>
                        </li>
                    </template>
                </ul>
            </div>
        </div>
    </nav>

    {# Hero Section #}
    <section id="about" class="pt-32 pb-20 bg-gradient-to-b from-forest-dark via-forest to-forest-light text-cream">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-5xl">
            <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-serif leading-tight tracking-tight"
                x-text="content.hero.statement">
            </h1>
        </div>
    </section>

    {# Photo Section #}
    <section class="w-full">
        <img src="/assets/images/forest.webp"
             alt="Forest landscape"
             class="w-full h-[50vh] sm:h-[60vh] object-cover">
    </section>

    {# How We Work - What We Do #}
    <section id="how-we-work" class="py-20 bg-cream">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
            <div class="prose prose-lg max-w-none">
                <h3 class="text-2xl sm:text-3xl font-bold text-forest-dark mb-6 tracking-wide"
                    x-text="content.howWeWork.whatWeDo.heading">
                </h3>
                <template x-for="para in content.howWeWork.whatWeDo.paragraphs" :key="para">
                    <p class="text-lg text-gray-700 leading-relaxed mb-6" x-text="para"></p>
                </template>
            </div>
        </div>
    </section>

    {# Global Community #}
    <section id="global-community" class="py-20 bg-sage/10">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
            <div class="prose prose-lg max-w-none">
                <h3 class="text-2xl sm:text-3xl font-bold text-forest-dark mb-6 tracking-wide"
                    x-text="content.howWeWork.globalCommunity.heading">
                </h3>
                <template x-for="para in content.howWeWork.globalCommunity.paragraphs" :key="para">
                    <p class="text-lg text-gray-700 leading-relaxed mb-6" x-text="para"></p>
                </template>
            </div>
        </div>
    </section>

    {# Team Section #}
    <section id="team" class="py-20 bg-cream">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
            <h3 class="text-xl sm:text-2xl font-bold text-center text-forest-dark mb-16 tracking-widest"
                x-text="content.team.subtitle">
            </h3>

            {# Team Grid #}
            <div class="grid md:grid-cols-2 gap-12 mb-16">
                <template x-for="member in content.team.members" :key="member.name">
                    <div class="flex flex-col">
                        <img :src="member.image"
                             :alt="member.name"
                             class="w-full aspect-square object-cover rounded-lg shadow-lg mb-6">
                        <h3 class="text-2xl font-bold text-forest-dark mb-4 tracking-wide" x-text="member.name"></h3>
                        <p class="text-base text-gray-700 leading-relaxed" x-text="member.bio"></p>
                    </div>
                </template>
            </div>

            {# Team Story #}
            <div class="max-w-4xl mx-auto mt-16 space-y-6">
                <template x-for="para in content.team.story" :key="para">
                    <p class="text-lg text-gray-700 leading-relaxed" x-text="para"></p>
                </template>
            </div>
        </div>
    </section>

    {# Contact Section #}
    <section id="contact" class="py-20 bg-forest-dark text-cream">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-3xl">
            <h2 class="text-3xl sm:text-4xl font-bold mb-4" x-text="content.contact.title"></h2>
            <p class="text-xl text-sage mb-4" x-text="content.contact.subtitle"></p>
            <p class="text-lg mb-12" x-text="content.contact.message"></p>

            <form @submit.prevent="handleSubmit" class="space-y-6">
                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label for="first-name" class="block text-sm font-medium mb-2">
                            First Name (required)
                        </label>
                        <input type="text"
                               id="first-name"
                               x-model="formData.firstName"
                               required
                               class="w-full px-4 py-3 bg-cream/10 border border-forest-light rounded-lg focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent text-cream placeholder-cream/50 transition-all">
                    </div>
                    <div>
                        <label for="last-name" class="block text-sm font-medium mb-2">
                            Last Name
                        </label>
                        <input type="text"
                               id="last-name"
                               x-model="formData.lastName"
                               class="w-full px-4 py-3 bg-cream/10 border border-forest-light rounded-lg focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent text-cream placeholder-cream/50 transition-all">
                    </div>
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium mb-2">
                        Email (required)
                    </label>
                    <input type="email"
                           id="email"
                           x-model="formData.email"
                           required
                           class="w-full px-4 py-3 bg-cream/10 border border-forest-light rounded-lg focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent text-cream placeholder-cream/50 transition-all">
                </div>
                <button type="submit"
                        class="w-full md:w-auto px-8 py-4 bg-sage hover:bg-forest-light text-forest-dark hover:text-cream font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg"
                        x-text="content.contact.donateButton">
                </button>
            </form>
        </div>
    </section>

    {# Footer #}
    <footer class="py-12 bg-forest-dark/95 text-cream border-t border-forest-light">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row justify-between items-center gap-6">
                <div class="flex gap-6">
                    <a :href="content.social.instagram"
                       target="_blank"
                       class="hover:text-sage transition-colors">
                        Instagram
                    </a>
                    <a :href="content.social.email"
                       class="hover:text-sage transition-colors">
                        Email
                    </a>
                    <a :href="content.social.linkedin"
                       target="_blank"
                       class="hover:text-sage transition-colors">
                        LinkedIn
                    </a>
                </div>
                <p class="text-sm text-cream/70">
                    &copy; 2025 City of Asylum PDX. All rights reserved.
                </p>
            </div>
        </div>
    </footer>

</div>
