---
layout: base.njk
title: Home
---

{# Navigation #}
<nav class="fixed top-0 w-full bg-white/95 backdrop-blur-sm text-forest-dark z-50 shadow-lg">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            {# Mobile menu button #}
            <button id="mobile-menu-button"
                    class="md:hidden text-forest-dark hover:text-forest transition-colors"
                    aria-expanded="false"
                    aria-controls="mobile-menu">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>

            {# Desktop navigation #}
            <ul class="hidden md:flex md:space-x-8 mx-auto">
                {% for item in content.navigation %}
                <li>
                    <a href="{{ item.href }}"
                       class="text-sm font-medium hover:text-forest transition-colors py-2 border-b-2 border-transparent hover:border-forest">
                        {{ item.label }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>

        {# Mobile menu #}
        <div id="mobile-menu" class="hidden md:hidden py-4 border-t border-gray-200">
            <ul class="space-y-2">
                {% for item in content.navigation %}
                <li>
                    <a href="{{ item.href }}"
                       class="block py-2 px-4 hover:bg-gray-100 rounded transition-colors">
                        {{ item.label }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</nav>

{# Hero Section #}
<section id="about" class="pt-32 pb-20 bg-cream">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-5xl">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-sans leading-tight tracking-tight text-forest-dark">
            {{ content.hero.statement }}
        </h1>
    </div>
</section>

{# Photo Section #}
<section class="w-full">
    <img src="/assets/images/forest.webp"
         alt="Forest landscape"
         class="w-full h-[50vh] sm:h-[60vh] object-cover">
</section>

{# How We Work - What We Do #}
<section id="how-we-work" class="py-20 bg-cream">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
        <div class="prose prose-lg max-w-none">
            <h3 class="text-2xl sm:text-3xl font-bold text-forest-dark mb-6 tracking-wide">
                {{ content.howWeWork.whatWeDo.heading }}
            </h3>
            {% for para in content.howWeWork.whatWeDo.paragraphs %}
            <p class="text-lg text-gray-700 leading-relaxed mb-6">{{ para }}</p>
            {% endfor %}
        </div>
    </div>
</section>

{# Global Community #}
<section id="global-community" class="py-20 bg-sage/10">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
        <div class="prose prose-lg max-w-none">
            <h3 class="text-2xl sm:text-3xl font-bold text-forest-dark mb-6 tracking-wide">
                {{ content.howWeWork.globalCommunity.heading }}
            </h3>
            {% for para in content.howWeWork.globalCommunity.paragraphs %}
            <p class="text-lg text-gray-700 leading-relaxed mb-6">{{ para }}</p>
            {% endfor %}
        </div>
    </div>
</section>

{# Team Section #}
<section id="team" class="py-20 bg-cream">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
        <h3 class="text-xl sm:text-2xl font-bold text-center text-forest-dark mb-16 tracking-widest">
            {{ content.team.subtitle }}
        </h3>

        {# Team Grid #}
        <div class="grid md:grid-cols-2 gap-12 mb-16">
            {% for member in content.team.members %}
            <div class="flex flex-col">
                <img src="{{ member.image }}"
                     alt="{{ member.name }}"
                     class="w-full aspect-square object-cover rounded-lg shadow-lg mb-6">
                <h3 class="text-2xl font-bold text-forest-dark mb-4 tracking-wide">{{ member.name }}</h3>
                <p class="text-base text-gray-700 leading-relaxed">{{ member.bio }}</p>
            </div>
            {% endfor %}
        </div>

        {# Team Story #}
        <div class="max-w-4xl mx-auto mt-16 space-y-6">
            {% for para in content.team.story %}
            <p class="text-lg text-gray-700 leading-relaxed">{{ para }}</p>
            {% endfor %}
        </div>
    </div>
</section>

{# Contact Section #}
<section id="contact" class="py-20 bg-forest-dark text-cream">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-3xl">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">{{ content.contact.title }}</h2>
        <p class="text-xl text-sage mb-4">{{ content.contact.subtitle }}</p>
        <p class="text-lg mb-12">{{ content.contact.message }}</p>

        <form class="space-y-6" name="contact" method="POST" data-netlify="true">
            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    <label for="first-name" class="block text-sm font-medium mb-2">
                        First Name (required)
                    </label>
                    <input type="text"
                           id="first-name"
                           name="firstName"
                           required
                           class="w-full px-4 py-3 bg-cream/10 border border-forest-light rounded-lg focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent text-cream placeholder-cream/50 transition-all">
                </div>
                <div>
                    <label for="last-name" class="block text-sm font-medium mb-2">
                        Last Name
                    </label>
                    <input type="text"
                           id="last-name"
                           name="lastName"
                           class="w-full px-4 py-3 bg-cream/10 border border-forest-light rounded-lg focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent text-cream placeholder-cream/50 transition-all">
                </div>
            </div>
            <div>
                <label for="email" class="block text-sm font-medium mb-2">
                    Email (required)
                </label>
                <input type="email"
                       id="email"
                       name="email"
                       required
                       class="w-full px-4 py-3 bg-cream/10 border border-forest-light rounded-lg focus:outline-none focus:ring-2 focus:ring-sage focus:border-transparent text-cream placeholder-cream/50 transition-all">
            </div>
            <button type="submit"
                    class="w-full md:w-auto px-8 py-4 bg-sage hover:bg-forest-light text-forest-dark hover:text-cream font-bold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
                {{ content.contact.donateButton }}
            </button>
        </form>
    </div>
</section>

{# Footer #}
<footer class="py-12 bg-forest-dark/95 text-cream border-t border-forest-light">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6">
            <div class="flex gap-6">
                <a href="{{ content.social.instagram }}"
                   target="_blank"
                   class="hover:text-sage transition-colors">
                    Instagram
                </a>
                <a href="{{ content.social.email }}"
                   class="hover:text-sage transition-colors">
                    Email
                </a>
                <a href="{{ content.social.linkedin }}"
                   target="_blank"
                   class="hover:text-sage transition-colors">
                    LinkedIn
                </a>
            </div>
            <p class="text-sm text-cream/70">
                &copy; 2025 City of Asylum PDX. All rights reserved.
            </p>
        </div>
    </div>
</footer>

<script>
// Simple mobile menu toggle - no framework needed
document.getElementById('mobile-menu-button')?.addEventListener('click', function() {
    const menu = document.getElementById('mobile-menu');
    const isExpanded = this.getAttribute('aria-expanded') === 'true';
    this.setAttribute('aria-expanded', !isExpanded);
    menu.classList.toggle('hidden');
});
</script>
